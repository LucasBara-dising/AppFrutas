<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/cinzaFunda"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="32dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="30dp"
                app:srcCompat="@drawable/fruit" />

            <TextView
                android:id="@+id/textViewCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_marginStart="15dp"
                android:background="#F2DFC7"
                android:padding="3dp"
                android:paddingTop="3dp"
                android:text="Fruta"
                android:textColor="#B57720" />

            <TextView
                android:id="@+id/textViewNomeFruta"
                style="@style/TxtBaseHome"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/textViewCategoria"
                android:text="TextView" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>